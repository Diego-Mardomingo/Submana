import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";
import { getLangFromCookie, useTranslations } from "../../i18n/utils";

const { id } = Astro.params;
const { cookies, redirect } = Astro;
const lang = getLangFromCookie(cookies);
const t = useTranslations(lang);

// 1. Auth Check
const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/login");
}

let session;
try {
  session = await supabase.auth.setSession({
    refresh_token: refreshToken.value,
    access_token: accessToken.value,
  });
  if (session.error) {
    return redirect("/login");
  }
} catch (error) {
  return redirect("/login");
}

// 2. Fetch Subscription
const { data: sub, error } = await supabase
  .from('subscriptions')
  .select('*')
  .eq('id', id)
  .eq('user_id', session.data.user?.id) // Security check
  .single();

if (error || !sub) {
  return redirect("/subscriptions");
}

// 3. Logic / Helpers (Ported from SubCard.jsx)
const setToNoon = (date) => new Date(date.getFullYear(), date.getMonth(), date.getDate(), 12, 0, 0);

const calculateIsActive = (sub) => {
  const current = setToNoon(new Date());
  const start = setToNoon(new Date(sub.start_date));
  if (start > current) return false;
  if (sub.end_date) {
    const end = setToNoon(new Date(sub.end_date));
    if (end < current) return false;
  }
  return true;
};

const calculateTotalCost = (sub) => {
  const start = setToNoon(new Date(sub.start_date));
  let current = setToNoon(new Date());
  
  // If start date is in future, cost is 0
  if (current < start) return 0;

  // If subscription ended, cap the calculation at end_date
  if (sub.end_date) {
    const end = setToNoon(new Date(sub.end_date));
    if (end < current) {
      current = end;
    }
  }

  let periods = 0;
  const msInDay = 1000 * 60 * 60 * 24;

  if (sub.frequency === "weekly") {
     const diffDays = Math.floor((current.getTime() - start.getTime()) / msInDay);
     const interval = 7 * (sub.frequency_value || 1);
     periods = Math.floor(diffDays / interval) + 1;
  } else if (sub.frequency === "monthly") {
     // Calculate total months difference
     let diffMonths = (current.getFullYear() - start.getFullYear()) * 12 + (current.getMonth() - start.getMonth());
     
     // Check day of month to see if current month's billing cycle has passed
     const startDay = start.getDate();
     const currentDay = current.getDate();
     
     // Special case: if billing day > current day, we haven't paid this month yet (unless it's end of month edge case)
     // A simplified reliable approach for monthly:
     // If we are strictly before the billing day in the current month, subtract one period.
     if (currentDay < startDay) {
        diffMonths--;
     }
     
     const interval = sub.frequency_value || 1;
     periods = Math.floor(diffMonths / interval) + 1;

  } else if (sub.frequency === "yearly") {
     let diffYears = current.getFullYear() - start.getFullYear();
     const startMonth = start.getMonth();
     const currentMonth = current.getMonth();
     const startDay = start.getDate();
     const currentDay = current.getDate();

     // If before anniversary date, subtract one year
     if (currentMonth < startMonth || (currentMonth === startMonth && currentDay < startDay)) {
        diffYears--;
     }
     
     const interval = sub.frequency_value || 1;
     periods = Math.floor(diffYears / interval) + 1;
  } else {
     periods = 1;
  }
  
  return (sub.cost * Math.max(0, periods)).toFixed(2);
};



const calculateProjections = (sub) => {
    let monthly = 0;
    let yearly = 0;
    const cost = parseFloat(sub.cost);
    const interval = sub.frequency_value || 1;

    if (sub.frequency === "weekly") {
        monthly = (cost / interval) * 4.345;
        yearly = (cost / interval) * 52;
    } else if (sub.frequency === "monthly") {
        monthly = cost / interval;
        yearly = (cost / interval) * 12;
    } else if (sub.frequency === "yearly") {
        monthly = cost / interval / 12;
        yearly = cost / interval;
    }
    return { monthly, yearly };
};

const isActive = calculateIsActive(sub);
const totalSpent = calculateTotalCost(sub);
const { yearly: projectedYearly } = calculateProjections(sub);

const formatDate = (dateStr) => {
  if (!dateStr) return "-";
  return new Date(dateStr).toLocaleDateString(lang === 'es' ? 'es-ES' : 'en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const formatCurrency = (val) => new Intl.NumberFormat(lang === 'es' ? 'es-ES' : 'en-US', { style: 'currency', currency: 'EUR' }).format(val);

---

<Layout title={sub.service_name}>
  <div class="details-page">
    
    <!-- Top Nav -->
    <a href="/subscriptions" class="back-link" aria-label="Go back">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 18l-6-6 6-6"/></svg>
      <span>{t('nav.subscriptions')}</span>
    </a>

    <!-- Header / Hero -->
    <header class="detail-header">
      <div class="icon-hero-container">
         <img 
            src={sub.icon} 
            alt={sub.service_name} 
            class="hero-icon" 
            style={`view-transition-name: icon-${sub.id}`} 
         />
      </div>
      
      <div class="hero-info">
        <h1 class="hero-title" style={`view-transition-name: name-${sub.id}`}>{sub.service_name}</h1>
        <div class={`status-badge ${isActive ? 'active' : 'inactive'}`}>
          {isActive ? 'Active' : 'Inactive'}
        </div>
      </div>
      
      <div class="hero-cost">
        <span class="big-cost">{formatCurrency(sub.cost)}</span>
        <span class="freq-label">
           {sub.frequency_value > 1 ? `${t('sub.every')} ${sub.frequency_value} ` : '/'}{sub.frequency}
        </span>
      </div>
    </header>

    <!-- Stats Grid -->
    <div class="stats-grid">
       <div class="stat-card">
          <span class="label">{t('sub.totalSpent')}</span>
          <span class="value accent">{formatCurrency(totalSpent)}</span>
       </div>
       


       <div class="stat-card">
          <span class="label">{t('sub.annualCost')}</span>
          <span class="value accent">{formatCurrency(projectedYearly)}</span>
       </div>

       <div class="stat-card">
          <span class="label">{t('sub.startDate')}</span>
          <span class="value">{formatDate(sub.start_date)}</span>
       </div>
       {sub.end_date && (
         <div class="stat-card">
            <span class="label">{t('sub.endDate')}</span>
            <span class="value">{formatDate(sub.end_date)}</span>
         </div>
       )}
    </div>

    <!-- Actions -->
    <div class="actions-container">
        <!-- Edit -->
        <a href={`/subscription/${sub.id}/edit`} class="action-btn edit" data-astro-prefetch>
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
           {t('sub.edit') || 'Edit'}
        </a>

        <!-- Cancel (Only if active/no end date) -->
        {!sub.end_date && (
            <form method="POST" action="/api/crud/cancelSubAction" class="cancel-form" id="cancel-form">
                <input type="hidden" name="id" value={sub.id} />
                <button type="submit" class="action-btn cancel" id="cancel-btn">
                    <span class="btn-content">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
                        {t('sub.cancel') || 'Cancel'}
                    </span>
                    <svg class="spinner-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M10.14,1.16a11,11,0,0,0-9,8.92A1.59,1.59,0,0,0,2.46,12,1.52,1.52,0,0,0,4.11,10.7a8,8,0,0,1,6.66-6.61A1.42,1.42,0,0,0,12,2.69h0A1.57,1.57,0,0,0,10.14,1.16Z" fill="currentColor"><animateTransform attributeName="transform" type="rotate" dur="0.75s" values="0 12 12;360 12 12" repeatCount="indefinite" /></path></svg>
                </button>
            </form>
        )}


        <!-- Delete Form -->
        <button class="action-btn delete" id="delete-trigger">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
           {t('sub.delete') || 'Delete'}
        </button>
    </div>

  </div>

  <!-- Delete Modal (Hidden) -->
  <dialog id="delete-modal" class="modal">
      <div class="modal-content">
          <h2>{t('sub.deleteTitle')}</h2>
          <div class="modal-actions">
              <button id="cancel-delete">{t('sub.cancelAction')}</button>
              <form method="POST" action="/api/crud/deleteSubAction" id="delete-form">
                 <input type="hidden" name="id" value={sub.id} />
                 <button type="submit" class="danger-btn action-btn delete" id="confirm-delete-btn">
                    <span class="btn-content">{t('sub.delete')}</span>
                    <svg class="spinner-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M10.14,1.16a11,11,0,0,0-9,8.92A1.59,1.59,0,0,0,2.46,12,1.52,1.52,0,0,0,4.11,10.7a8,8,0,0,1,6.66-6.61A1.42,1.42,0,0,0,12,2.69h0A1.57,1.57,0,0,0,10.14,1.16Z" fill="currentColor"><animateTransform attributeName="transform" type="rotate" dur="0.75s" values="0 12 12;360 12 12" repeatCount="indefinite" /></path></svg>
                 </button>
              </form>
          </div>
      </div>
  </dialog>

</Layout>

<script>
  function initPage() {
      const deleteTrigger = document.getElementById('delete-trigger');
      const deleteModal = document.getElementById('delete-modal');
      const cancelDelete = document.getElementById('cancel-delete');
      const editBtn = document.getElementById('edit-btn');

      if(deleteTrigger && deleteModal && cancelDelete) {
          deleteTrigger.addEventListener('click', () => {
              deleteModal.showModal();
          });
          cancelDelete.addEventListener('click', () => {
              deleteModal.close();
          });
          
          // Close on backdrop click
          deleteModal.addEventListener('click', (e) => {
             const rect = deleteModal.getBoundingClientRect();
             const isInDialog = (rect.top <= e.clientY && e.clientY <= rect.top + rect.height &&
               rect.left <= e.clientX && e.clientX <= rect.left + rect.width);
             if (!isInDialog) {
               deleteModal.close();
             }
          });
      }

      if (editBtn) {
          editBtn.addEventListener('click', () => {
             alert('Edit functionality coming in next step!'); 
             // Logic to redirect or open edit form
          });
      }

      const cancelForm = document.getElementById('cancel-form');
      const deleteForm = document.getElementById('delete-form');

      if (cancelForm) {
          cancelForm.addEventListener('submit', () => {
              const btn = document.getElementById('cancel-btn');
              if (btn) btn.classList.add('loading');
          });
      }

      if (deleteForm) {
          deleteForm.addEventListener('submit', () => {
              const btn = document.getElementById('confirm-delete-btn');
              if (btn) btn.classList.add('loading');
          });
      }
  }

  document.addEventListener('astro:page-load', initPage);
</script>

<style>
  .details-page {
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem 1.5rem 6rem;
  }

  .back-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gris-claro);
    text-decoration: none;
    font-weight: 500;
    margin-bottom: 2rem;
    width: fit-content;
    padding: 0.5rem 0.5rem 0.5rem 0;
    transition: color 0.2s;
  }
  .back-link:hover { color: var(--blanco); }

  /* ── Hero ── */
  .detail-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .icon-hero-container {
    width: 96px;
    height: 96px;
    background: var(--negro);
    border-radius: 24px;
    padding: 16px;
    border: 1px solid var(--gris);
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
  }
  
  .hero-icon {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 12px;
  }

  .hero-title {
    font-size: 2rem;
    font-weight: 800;
    margin: 0 0 0.5rem 0;
    color: var(--blanco);
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
  }
  .status-badge.active { background: var(--success-soft); color: var(--success); }
  .status-badge.inactive { background: rgba(239, 68, 68, 0.15); color: var(--danger); }

  .hero-cost {
     display: flex;
     flex-direction: column;
     gap: 0;
  }
  
  .big-cost {
     font-size: 2.5rem;
     font-weight: 800;
     color: var(--blanco);
     line-height: 1;
  }
  .freq-label {
     color: var(--gris-claro);
     font-size: 1rem;
  }

  /* ── Stats ── */
  .stats-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 3rem;
  }
  
  .stat-card {
    background: var(--gris-oscuro);
    border: 1px solid var(--gris);
    padding: 1.25rem;
    border-radius: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .stat-card .label {
     color: var(--gris-claro);
     font-weight: 600;
     font-size: 0.95rem;
  }
  .stat-card .value {
     color: var(--blanco);
     font-weight: 700;
     font-size: 1.1rem;
  }
  .stat-card .value.accent {
     color: var(--accent);
  }

  /* ── Actions ── */
  .actions-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 1rem;
      width: 100%;
  }

  .cancel-form {
      display: contents; /* Ensure the button takes grid cell correctly */
  }

  .action-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 1rem;
      border-radius: 12px;
      font-weight: 700;
      font-size: 1rem;
      border: none;
      cursor: pointer;
      transition: all 0.2s ease;
      width: 100%;
  }
  
  .action-btn.edit {
      background: var(--info-soft);
      color: var(--info);
      border: 1px solid var(--info-muted);
  }
  .action-btn.edit:hover {
      background: var(--info-muted);
      transform: translateY(-2px);
  }

  .action-btn.cancel {
      background: var(--warning-soft);
      color: var(--warning);
      border: 1px solid var(--warning-muted);
  }
  .action-btn.cancel:hover {
      background: var(--warning-muted);
      transform: translateY(-2px);
  }

  .action-btn.delete {
      background: var(--danger-soft);
      color: var(--danger);
      border: 1px solid var(--danger-muted);
  }
  .action-btn.delete:hover {
      background: var(--danger-muted);
      transform: translateY(-2px);
  }

  /* ── Spinner ── */
  .btn-content {
      display: flex;
      align-items: center;
      gap: 0.5rem;
  }
  .spinner-icon {
      display: none;
      width: 24px;
      height: 24px;
  }
  .action-btn.loading .btn-content {
      display: none;
  }
  .action-btn.loading .spinner-icon {
      display: block;
  }

  /* ── Modal ── */
  .modal {
      border: none;
      border-radius: 16px;
      background: var(--gris-oscuro);
      color: var(--blanco);
      padding: 0;
      max-width: 90%;
      width: 400px;
      backdrop-filter: blur(5px);
      margin: auto;
  }
  .modal::backdrop {
      background: rgba(0,0,0,0.6);
  }

  .modal-content {
      padding: 2rem;
      text-align: center;
  }

  .modal h2 { margin-top: 0; margin-bottom: 2rem; }
  .modal p { color: var(--gris-claro); margin-bottom: 2rem; }

  .modal-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
  }

  .modal-actions button {
      padding: 0.85rem 1.5rem;
      border-radius: 12px;
      border: none;
      font-weight: 700;
      font-size: 0.95rem;
      cursor: pointer;
      transition: all 0.2s ease;
  }

  #cancel-delete {
      background: var(--info-soft);
      color: var(--info);
      border: 1px solid var(--info-muted);
  }
  
  #cancel-delete:hover {
      background: var(--info-muted);
      transform: translateY(-2px);
  }
  
  .danger-btn {
      background: var(--danger);
      color: white;
  }

  .danger-btn:hover {
      background: var(--danger-hover);
  }
</style>
