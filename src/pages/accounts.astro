
---
import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";
import ShowToast from "../components/ShowToast";
import Icon from "../components/Icon.jsx";
import { getLangFromCookie, useTranslations } from "../i18n/utils";

const { cookies, redirect } = Astro;
const lang = getLangFromCookie(cookies);
const t = useTranslations(lang);

const iconTranslations = {
  'sub.selected': t('sub.selected'),
  'sub.brandIcon': t('sub.brandIcon'),
  'sub.searchPlaceholder': t('sub.searchPlaceholder'),
  'sub.startTyping': t('sub.startTyping'),
  'sub.searching': t('sub.searching'),
  'sub.noIconsFound': t('sub.noIconsFound'),
  'sub.randomAvatar': t('sub.randomAvatar')
};

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/login");
}

let session;
try {
  session = await supabase.auth.setSession({
    refresh_token: refreshToken.value,
    access_token: accessToken.value,
  });
  if (session.error) {
    return redirect("/login");
  }
} catch (error) {
  return redirect("/login");
}

const user = session.data.user;

// Fetch Accounts
const { data: accounts, error } = await supabase
  .from("accounts")
  .select("*")
  .eq("user_id", user.id)
  .order("created_at", { ascending: true });

const accountsList = accounts || [];

---

<Layout title={t('accounts.title')}>
  <div class="page-container">
    <header class="header">
      <div class="title-with-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="title-icon"><rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect><line x1="1" y1="10" x2="23" y2="10"></line></svg>
        <h1>{t('accounts.title')}</h1>
      </div>
      <button id="add-account-btn" class="add-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
        <span>{t('accounts.add')}</span>
      </button>
    </header>

    <div class="accounts-grid">
      {accountsList.length === 0 && (
        <div class="empty-state">
             <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect><line x1="1" y1="10" x2="23" y2="10"></line></svg>
             </div>
             <p>{t('accounts.noAccounts')}</p>
        </div>
      )}
      
      {accountsList.map(account => (
        <div class="account-card" data-id={account.id} style={`--accent-account: ${account.color || 'var(--accent)'}`}>
           <div class="card-content">
              <div class="account-icon-wrapper">
                {account.icon ? (
                  <img src={account.icon} alt={account.name} class="account-img" />
                ) : (
                  <div class="account-icon-fallback">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect><line x1="1" y1="10" x2="23" y2="10"></line></svg>
                  </div>
                )}
              </div>
              <div class="account-info">
                  <h3 class="account-name">{account.name}</h3>
                  <p class="account-balance">{parseFloat(account.balance).toFixed(2)} €</p>
              </div>
           </div>

           <button class={`favorite-btn ${account.is_default ? 'is-default' : ''}`} data-id={account.id} aria-label="Set as Default">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill={account.is_default ? "currentColor" : "none"} stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
           </button>
           
           <div class="card-actions">
              <button class="icon-btn edit-btn" data-id={account.id} data-name={account.name} data-balance={account.balance} data-icon={account.icon} data-color={account.color} aria-label="Edit">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>
              </button>
              <button class="icon-btn delete-btn" data-id={account.id}>
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
              </button>
           </div>
        </div>
      ))}
    </div>

    <!-- Modal for Create/Edit -->
    <div id="account-modal" class="modal-backdrop hidden">
      <div class="modal-content">
        <h2 id="modal-title">{t('accounts.add')}</h2>
        <form id="account-form" method="POST" action="/api/crud/create-account">
          <input type="hidden" name="id" id="acc-id">
          <input type="hidden" name="icon" id="icon_value">
          
          <div class="field">
            <label for="acc-name">{t('settings.name')}</label>
            <input type="text" name="name" id="acc-name" required placeholder="Ex. Main Bank" autocomplete="off">
          </div>

          <div class="form-grid">
            <div class="field">
                <label for="acc-balance">{t('accounts.balance')} (€)</label>
                <div class="currency-input">
                    <span class="currency-symbol">€</span>
                    <input type="number" name="balance" id="acc-balance" step="0.01" placeholder="0.00">
                </div>
            </div>

            <div class="field">
                <label>{t('common.color') || 'Color'}</label>
                <div class="color-picker-custom">
                    <button type="button" id="color-trigger" class="color-dot-trigger" style="background-color: #7c3aed;"></button>
                    <input type="hidden" name="color" id="acc-color" value="#7c3aed">
                    <div id="color-options" class="color-options-grid d-none">
                        <button type="button" class="color-option-dot" data-color="#7c3aed" style="background-color: #7c3aed;"></button>
                        <button type="button" class="color-option-dot" data-color="#3b82f6" style="background-color: #3b82f6;"></button>
                        <button type="button" class="color-option-dot" data-color="#10b981" style="background-color: #10b981;"></button>
                        <button type="button" class="color-option-dot" data-color="#f43f5e" style="background-color: #f43f5e;"></button>
                        <button type="button" class="color-option-dot" data-color="#f59e0b" style="background-color: #f59e0b;"></button>
                        <button type="button" class="color-option-dot" data-color="#64748b" style="background-color: #64748b;"></button>
                    </div>
                </div>
            </div>
          </div>

          <div class="field">
            <label>{t('sub.icon')}</label>
            <div class="icon-selector-wrapper no-scroll">
                <Icon defaultIcon="" onIconSelected={() => {}} translations={iconTranslations} client:load />
            </div>
          </div>

          <div class="modal-actions">
            <button type="button" class="btn-cancel" id="close-modal-btn">{t('common.cancel')}</button>
            <button type="submit" class="btn-save">{t('common.save')}</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Custom Delete Confirmation Modal -->
    <div id="delete-modal" class="modal-backdrop hidden">
      <div class="modal-content delete-confirm">
        <div class="delete-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 6h18"></path><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
        </div>
        <h2>{t('common.areYouSure') || 'Are you sure?'}</h2>
        <p>{t('accounts.deleteConfirm') || 'This action cannot be undone.'}</p>
        
        <form id="confirm-delete-form" action="/api/crud/delete-account" method="POST">
            <input type="hidden" name="id" id="confirm-delete-id">
            <div class="modal-actions full-width">
                <button type="button" class="btn-cancel" id="cancel-delete-btn">{t('common.cancel')}</button>
                <button type="submit" class="btn-delete-final">{t('common.delete') || 'Delete'}</button>
            </div>
        </form>
      </div>
    </div>
     <ShowToast client:only />
  </div>
</Layout>

<script>
  function initAccounts() {
    const modal = document.getElementById('account-modal');
    const form = document.getElementById('account-form');
    const modalTitle = document.getElementById('modal-title');
    const idInput = document.getElementById('acc-id');
    const nameInput = document.getElementById('acc-name');
    const balanceInput = document.getElementById('acc-balance');
    const iconValueInput = document.getElementById('icon_value');
    const colorInput = document.getElementById('acc-color');
    const colorTrigger = document.getElementById('color-trigger');
    const colorOptions = document.getElementById('color-options');
    const colorOptionDots = document.querySelectorAll('.color-option-dot');
    const addBtn = document.getElementById('add-account-btn');
    const closeBtn = document.getElementById('close-modal-btn');
    const deleteModal = document.getElementById('delete-modal');
    const confirmDeleteIdInput = document.getElementById('confirm-delete-id');
    const cancelDeleteBtn = document.getElementById('cancel-delete-btn');

    if(!modal) return;

    const openModal = (mode, data = {}) => {
      modal.classList.remove('hidden');
      form.reset();
      
      // Clear icon preview in React component
      if (iconValueInput) iconValueInput.value = data.icon || '';
      window.dispatchEvent(new CustomEvent('submana:set-icon', { detail: data.icon || '' }));
      // Update color trigger background
      const currentColor = data.color || '#7c3aed';
      if (colorTrigger) colorTrigger.style.backgroundColor = currentColor;
      if (colorInput) colorInput.value = currentColor;
      if (colorOptions) colorOptions.classList.add('d-none');

      if (mode === 'create') {
        form.action = '/api/crud/create-account';
        modalTitle.textContent = document.documentElement.lang === 'es' ? 'Añadir Cuenta' : 'Add Account';
        idInput.value = '';
      } else if (mode === 'edit') {
        form.action = '/api/crud/update-account';
        modalTitle.textContent = document.documentElement.lang === 'es' ? 'Editar Cuenta' : 'Edit Account';
        idInput.value = data.id;
        nameInput.value = data.name;
        balanceInput.value = data.balance;
      }
    };

    const closeModal = () => {
      modal.classList.add('hidden');
    };

    const openDeleteModal = (id) => {
        deleteModal.classList.remove('hidden');
        confirmDeleteIdInput.value = id;
    };

    const closeDeleteModal = () => {
        deleteModal.classList.add('hidden');
    };

    addBtn.addEventListener('click', () => openModal('create'));
    closeBtn.addEventListener('click', closeModal);
    cancelDeleteBtn.addEventListener('click', closeDeleteModal);
    
    // Close on click outside
    modal.addEventListener('click', (e) => {
        if(e.target === modal) closeModal();
    });
    deleteModal.addEventListener('click', (e) => {
        if(e.target === deleteModal) closeDeleteModal();
    });

    // Custom Color Picker Logic
    if (colorTrigger && colorOptions) {
        colorTrigger.addEventListener('click', (e) => {
            e.stopPropagation();
            colorOptions.classList.toggle('d-none');
        });

        // Close color options when clicking outside
        document.addEventListener('click', () => {
            colorOptions.classList.add('d-none');
        });

        colorOptionDots.forEach(dot => {
            dot.addEventListener('click', (e) => {
                e.stopPropagation();
                const selectedColor = dot.dataset.color;
                if (colorInput) colorInput.value = selectedColor;
                if (colorTrigger) colorTrigger.style.backgroundColor = selectedColor;
                
                // Update selected state
                colorOptionDots.forEach(d => d.classList.remove('selected'));
                dot.classList.add('selected');
                
                colorOptions.classList.add('d-none');
            });
        });
    }

    // Delegate events for edit/delete buttons
    document.addEventListener('click', (e) => {
      const target = e.target.closest('button');
      if (!target) return;

      if (target.classList.contains('edit-btn')) {
        openModal('edit', {
          id: target.dataset.id,
          name: target.dataset.name,
          balance: target.dataset.balance,
          icon: target.dataset.icon,
          color: target.dataset.color
        });
      }

      if (target.classList.contains('delete-btn')) {
          openDeleteModal(target.dataset.id);
      }
    });

    // Handle Default Account Click
    document.addEventListener('click', async (e) => {
        const btn = e.target.closest('.favorite-btn');
        if (!btn) return;

        const id = btn.dataset.id;
        
        // Optimistic update
        document.querySelectorAll('.favorite-btn').forEach(b => {
            b.classList.remove('is-default');
            b.querySelector('svg').setAttribute('fill', 'none');
        });
        btn.classList.add('is-default');
        btn.querySelector('svg').setAttribute('fill', 'currentColor');

        try {
            const formData = new FormData();
            formData.append('id', id);
            await fetch('/api/accounts/set-default', {
                method: 'POST',
                body: formData,
                credentials: 'include'
            });
            // Ideally handle error revert
        } catch (err) {
            console.error(err);
        }
    });

    // Handle form loading state
    const handleLoading = (formId) => {
        const form = document.getElementById(formId);
        if(form) {
            form.addEventListener('submit', (e) => {
                const btn = form.querySelector('button[type="submit"]');
                if(btn) {
                    if (btn.classList.contains('btn-loading')) {
                        e.preventDefault();
                        return false; 
                    }
                    btn.classList.add('btn-loading');
                }
            });
        }
    };
    
    handleLoading('account-form');
    handleLoading('confirm-delete-form');
  }

  document.addEventListener('astro:page-load', initAccounts);
</script>

<style>
  .page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem 1rem 8rem;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .title-with-icon {
      display: flex;
      align-items: center;
      gap: 0.75rem;
  }
  
  .title-icon {
      color: var(--accent);
      flex-shrink: 0;
      margin-top: -2px;
  }

  h1 {
      font-size: 1.75rem;
      font-weight: 800;
      letter-spacing: -0.02em;
      margin: 0;
  }

  .add-btn {
    background: var(--accent);
    color: white;
    border: none;
    padding: 0.6rem 1rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s;
    white-space: nowrap;
  }
  
  .add-btn:hover {
      background: var(--accent-hover);
      transform: translateY(-2px);
  }

  .accounts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1rem;
  }
  
  .empty-state {
      grid-column: 1 / -1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 4rem 1rem;
      color: var(--gris-claro);
      gap: 1rem;
      text-align: center;
  }
  
  .empty-icon {
      opacity: 0.2;
  }

  .account-card {
      background: var(--gris-oscuro);
      border: 1px solid var(--gris);
      border-radius: 16px;
      padding: 1.25rem;
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      min-height: 140px;
      transition: all 0.2s;
      overflow: hidden;
  }
  
  .favorite-btn {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: transparent;
      border: none;
      color: var(--gris-claro);
      cursor: pointer;
      padding: 4px;
      transition: all 0.2s;
      z-index: 2;
  }

  .favorite-btn:hover {
      color: #f59e0b;
      transform: scale(1.1);
  }

  .favorite-btn.is-default {
      color: #f59e0b;
  }
  
  .account-card:hover {
      border-color: var(--accent-account);
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }
  
  .card-content {
      display: flex;
      gap: 1rem;
      align-items: flex-start;
  }
  
  .account-icon {
      background: rgba(var(--accent-rgb), 0.1); /* fallback would be solid if var missing */
      background: var(--accent-soft);
      border-radius: 12px;
      padding: 0.75rem;
      color: var(--accent);
      display: flex;
      align-items: center;
      justify-content: center;
  }
  
  .account-info {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
  }
  
  .account-name {
      margin: 0;
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--blanco);
  }
  
  .account-balance {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--blanco);
  }

  .card-actions {
      display: flex;
      justify-content: flex-end;
      gap: 0.5rem;
      margin-top: 1rem;
      opacity: 0.6;
      transition: opacity 0.2s;
  }
  
  .account-card:hover .card-actions {
      opacity: 1;
  }
  
  .icon-btn {
      background: transparent;
      border: none;
      color: var(--gris-claro);
      cursor: pointer;
      padding: 0.4rem;
      border-radius: 6px;
      transition: all 0.2s;
  }
  
  .icon-btn:hover {
      background: rgba(255,255,255,0.05);
      color: var(--blanco);
  }

  .icon-btn.edit-btn {
      color: #3b82f6;
  }
  .icon-btn.edit-btn:hover {
      background: rgba(59, 130, 246, 0.1);
      color: #3b82f6;
  }
  
  .icon-btn.delete-btn {
      color: #ff4444;
  }
  .icon-btn.delete-btn:hover {
      background: rgba(255,50,50,0.1);
      color: #ff4444;
  }

  /* Account Card Styles */
  .account-icon-wrapper {
      width: 44px;
      height: 44px;
      background: var(--negro);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid var(--gris);
      padding: 4px;
      flex-shrink: 0;
  }

  .account-img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      border-radius: 8px;
  }

  .account-icon-fallback {
      color: var(--accent-account);
  }

  .account-card {
      border-left: 4px solid var(--accent-account);
  }

  /* Modal Helpers */
  .form-grid {
      display: grid;
      grid-template-columns: 1fr 60px;
      gap: 1rem;
      margin-bottom: 1.25rem;
  }

  #acc-color {
      display: none;
  }

  .color-picker-custom {
      position: relative;
      display: flex;
      align-items: center;
      height: 42px;
  }

  .color-dot-trigger {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      border: 3px solid var(--negro);
      box-shadow: 0 0 0 2px var(--gris);
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
  }

  .color-dot-trigger:hover {
      transform: scale(1.1);
      box-shadow: 0 0 0 2px var(--accent);
  }

  .color-options-grid {
      position: absolute;
      top: calc(100% + 10px);
      right: 0;
      background: var(--gris-oscuro);
      border: 1px solid var(--gris);
      border-radius: 12px;
      padding: 0.75rem;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 0.75rem;
      z-index: 2100;
      box-shadow: 0 10px 25px rgba(0,0,0,0.3);
      animation: fadeIn 0.2s ease-out;
  }

  @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-5px); }
      to { opacity: 1; transform: translateY(0); }
  }

  .color-option-dot {
      width: 24px;
      height: 24px;
      border-radius: 50%;
      border: 2px solid transparent;
      cursor: pointer;
      transition: transform 0.2s, border-color 0.2s;
  }

  .color-option-dot:hover {
      transform: scale(1.2);
  }

  .color-option-dot.selected {
      border-color: var(--blanco);
      transform: scale(1.1);
  }

  .icon-selector-wrapper {
      border: none;
      padding: 0;
      background: transparent;
  }

  .icon-selector-wrapper.no-scroll {
      max-height: none;
      overflow: visible;
  }

  /* Delete Confirm Modal */
  .delete-confirm {
      text-align: center;
  }

  .delete-icon {
      color: #ff4444;
      background: rgba(255,68,68,0.1);
      width: 64px;
      height: 64px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
  }

  .modal-content p {
      color: var(--gris-claro);
      margin-bottom: 2rem;
  }

  .full-width {
      width: 100%;
      justify-content: stretch !important;
  }

  .full-width button {
      flex: 1;
  }

  .btn-delete-final {
      background: #ff4444;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 700;
      cursor: pointer;
      box-shadow: 0 4px 12px rgba(255,68,68,0.3);
  }

  .btn-delete-final:hover {
      background: #ee3333;
      transform: translateY(-2px);
  }

  .d-none {
      display: none !important;
  }

  /* Modal */
  .modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2000;
    backdrop-filter: blur(4px);
    opacity: 1;
    transition: opacity 0.2s;
    padding-bottom: 80px; /* Space for mobile bottom nav */
