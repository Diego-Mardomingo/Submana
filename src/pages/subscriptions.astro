---
import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";
import { getLangFromCookie, useTranslations } from "../i18n/utils";
import SubscriptionListIsland from "../components/SubscriptionListIsland.jsx";

const { cookies, redirect } = Astro;
const lang = getLangFromCookie(cookies);
const t = useTranslations(lang);

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/login");
}

Astro.response.headers.set("Cache-Control", "no-cache, no-store, must-revalidate");
Astro.response.headers.set("Pragma", "no-cache");
Astro.response.headers.set("Expires", "0");

// Only validate auth — no data fetching (React island handles that)
let session;
try {
  session = await supabase.auth.setSession({
    refresh_token: refreshToken.value,
    access_token: accessToken.value,
  });
  if (session.error) {
    cookies.delete("sb-access-token", { path: "/" });
    cookies.delete("sb-refresh-token", { path: "/" });
    return redirect("/login");
  }
} catch (error) {
  cookies.delete("sb-access-token", { path: "/" });
  cookies.delete("sb-refresh-token", { path: "/" });
  return redirect("/login");
}

---

<Layout title={t('nav.subscriptions')}>
  <div class="page-container">
    
    <!-- Header with Add Button -->
    <header class="page-header">
      <div>
        <div class="title-with-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="title-icon"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
          <h1 class="title" data-i18n="nav.subscriptions">{t('nav.subscriptions')}</h1>
        </div>
      </div>
      <a href="/newSubscription" class="add-btn" aria-label={t('sub.new')} data-astro-prefetch>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14M5 12h14"/></svg>
        <span class="btn-text" data-i18n="sub.new">{t('sub.new')}</span>
      </a>
    </header>

    <!-- Subscriptions List (React Island) -->
    <div class="subs-list">
      <SubscriptionListIsland client:load lang={lang} />
    </div>

  </div>
</Layout>

<style>
  .page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem 1rem 8rem; /* Extra bottom padding for nav */
  }

  /* ── Header ── */
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .title-with-icon {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .title-icon {
    color: var(--accent);
    flex-shrink: 0;
    margin-top: -2px;
  }

  .title {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--blanco);
    margin: 0;
    letter-spacing: -0.02em;
  }

  .subtitle {
    margin: 0;
  }

  .total-badge {
    display: inline-flex;
    align-items: baseline;
    gap: 0.25rem;
    background: var(--accent-soft);
    color: var(--accent);
    padding: 0.4rem 0.8rem;
    border-radius: 999px;
    font-weight: 700;
    font-size: 1.1rem;
    border: 1px solid var(--accent-muted);
  }

  .period {
    font-size: 0.8rem;
    font-weight: 500;
    opacity: 0.8;
  }

  .add-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--accent);
    color: #ffffff;
    padding: 0.6rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s cubic-bezier(0.2, 0.8, 0.2, 1);
    box-shadow: 0 4px 12px var(--accent-muted);
  }

  .add-btn svg {
    color: #ffffff;
  }

  .add-btn:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px var(--accent-muted);
  }

  /* ── List ── */
  .subs-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .sub-item {
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    align-items: center;
    gap: 1rem;
    background: var(--gris-oscuro);
    padding: 1rem;
    border-radius: 16px;
    text-decoration: none;
    border: 1px solid var(--gris);
    transition: all 0.2s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .sub-item:hover {
    background: var(--gris);
    border-color: var(--gris-claro);
    transform: translateY(-1px);
  }

  /* ── Icon ── */
  .sub-icon-wrapper {
    width: 48px;
    height: 48px;
    background: var(--negro);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px;
    border: 1px solid var(--gris);
  }

  .sub-icon {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 8px;
  }

  /* ── Info ── */
  .sub-info {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    min-width: 0; /* truncate fix */
  }

  .sub-name {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--blanco);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .sub-freq {
    font-size: 0.85rem;
    color: var(--gris-claro);
  }

  /* ── Cost ── */
  .sub-cost {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
    gap: 0.35rem; /* Space between cost and status */
    text-align: right;
  }

  .cost-value {
    display: block;
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--accent);
    line-height: 1.2;
  }

  .sub-arrow {
    color: var(--gris-muy-claro);
    display: flex;
    align-items: center;
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  .sub-item:hover .sub-arrow {
    opacity: 1;
    color: var(--accent);
  }

  /* ── Empty State ── */
  .empty-state {
    text-align: center;
    padding: 4rem 1rem;
    color: var(--gris-claro);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .empty-icon {
    color: var(--gris);
    margin-bottom: 0.5rem;
  }

  .create-first-btn {
    margin-top: 1rem;
    color: var(--accent);
    font-weight: 700;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s;
  }

  .create-first-btn:hover {
    border-color: var(--accent);
  }

  /* ── Mobile ── */
  @media (max-width: 640px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .add-btn {
      width: 100%;
      justify-content: center;
    }

    .subtitle {
      margin-top: 0.5rem;
    }

    .sub-item {
      padding: 0.85rem;
      gap: 0.85rem;
    }

    .sub-icon-wrapper {
      width: 42px;
      height: 42px;
    }

    .sub-name {
      font-size: 1rem;
    }
  }

  /* ── Groupings & Status ── */
  .subs-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .group-title {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--gris-claro);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0.5rem 0 0.25rem;
    opacity: 0.8;
  }

  .divider {
    height: 1px;
    background: var(--gris);
    margin: 1.5rem 0;
    width: 100%;
    opacity: 0.5;
  }

  /* Status Indicators */
  .active-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--success);
    background: rgba(34, 197, 94, 0.15); /* Soft green */
    padding: 0.25rem 0.6rem;
    border-radius: 6px;
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  .inactive-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--danger);
    background: rgba(239, 68, 68, 0.15); /* Soft red */
    padding: 0.25rem 0.6rem;
    border-radius: 6px;
    border: 1px solid rgba(239, 68, 68, 0.2);
  }

  /* Inactive Item Styling */
  .sub-item.inactive {
    opacity: 0.85; /* Slightly less opacity but same background */
  }
  
  .sub-item.inactive:hover {
    opacity: 1;
  }
</style>
