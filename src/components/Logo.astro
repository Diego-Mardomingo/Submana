---
interface Props {
  variant?: "small" | "large";
  class?: string;
  style?: string;
}

const { variant = "large", class: className, style } = Astro.props;
---
<a href="/" class:list={["logo-link", variant, className]} style={style}>
  <div class:list={["logo-inner", variant]}>
    <div class="logo-icon">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    <span class="submana-text">Submana</span>
  </div>
</a>

<style>
  .logo-link {
    text-decoration: none;
    display: inline-block;
    color: var(--accent); /* Color for the SVG icon */
  }

  /* Default / Large Layout */
  .logo-inner {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .logo-icon {
    width: 6rem;
    height: 6rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .logo-icon svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 0 12px var(--accent-muted));
  }

  .submana-text {
    color: var(--blanco);
    font-weight: 900;
    font-size: 3.5rem;
    margin: 0;
    line-height: 1;
    letter-spacing: -0.05em;
    white-space: nowrap;
  }

  /* Hover effect */
  .logo-link:hover .logo-icon {
    transform: translateY(-2px);
  }
  
  /* Variant: Small Styling Overrides */
  .logo-inner.small {
    flex-direction: row;
    gap: 0.75rem;
    align-items: center;
  }

  .small .logo-icon {
    width: 2.2rem;
    height: 2.2rem;
  }
  
  .small .submana-text {
    font-size: 1.6rem;
    letter-spacing: -0.02em;
  }

  /* Mobile adjustments for large variant */
  @media (max-width: 768px) {
    .logo-inner:not(.small) .logo-icon {
      width: 5rem;
      height: 5rem;
    }
    .logo-inner:not(.small) .submana-text {
      font-size: 2.8rem;
    }
  }
</style>
