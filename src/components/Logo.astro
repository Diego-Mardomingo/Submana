---
interface Props {
  class?: string;
  style?: string;
}

const { class: className, style } = Astro.props;
---
<a href="/" class:list={["logo-link", className]} style={style}>
  <div class="logo">
    <img src="/logo.webp" alt="Submana logo" loading="eager" />
    <h1 class="submana">Submana</h1>
  </div>
</a>

<style>
  .logo-link {
    text-decoration: none;
    display: inline-block;
  }

  .logo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .logo img {
    width: 10rem;
    height: auto;
    max-width: 100%;
  }

  .submana {
    color: var(--accent);
    font-weight: 900;
    font-size: 3rem;
    margin: -0.4rem 0 0 0;
    line-height: 1;
    text-shadow: 0px 0px 50px var(--accent);
  }
  
  /* Variant: Small Logo (can be used via class="small-logo") */
  :global(.small-logo) .logo img {
    width: 4rem;
  }
  
  :global(.small-logo) .submana {
    font-size: 1.3rem;
    margin-top: 0;
  }
</style>
