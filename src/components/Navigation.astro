---
// Get current path to highlight active nav item
const currentPath = Astro.url.pathname;
---

<nav class="navigation">
  <div class="nav-container">
    <a href="/" class={`nav-item${currentPath === "/" ? " active" : ""}`}>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M15 21v-8a2 2 0 0 0-2-2h-2a2 2 0 0 0-2 2v8"></path>
        <path d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
      </svg>
      <span>Home</span>
    </a>

    <a
      href="/subscriptions"
      class={`nav-item${currentPath === "/subscriptions" ? " active" : ""}`}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M8 2v4"></path>
        <path d="M16 2v4"></path>
        <rect width="18" height="18" x="3" y="4" rx="2"></rect>
        <path d="M3 10h18"></path>
        <path d="M8 14h.01"></path>
        <path d="M12 14h.01"></path>
        <path d="M16 14h.01"></path>
        <path d="M8 18h.01"></path>
        <path d="M12 18h.01"></path>
        <path d="M16 18h.01"></path>
      </svg>
      <span>Subscriptions</span>
    </a>

    <a
      href="/settings"
      class={`nav-item${currentPath === "/settings" ? " active" : ""}`}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1-1-1.72v-.51a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path>
        <circle cx="12" cy="12" r="3"></circle>
      </svg>
      <span>Settings</span>
    </a>
  </div>
</nav>

<style>
  .navigation {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: var(--negro);
    border-top: 2px solid var(--gris-oscuro);
    z-index: 1000;
  }

  .nav-container {
    display: flex;
    justify-content: space-around;
    align-items: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 0.5rem 0;
  }

  .logo-container {
    display: none;
  }

  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    padding: 0.75rem 1rem;
    color: var(--gris-muy-claro);
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s ease;
    min-width: 80px;
    position: relative;
  }

  .nav-item:hover {
    color: var(--blanco);
    background-color: var(--gris-oscuro);
  }

  .nav-item.active {
    color: var(--accent);
    background: none;
    border: none;
    font-weight: 700;
  }

  .nav-item.active span {
    color: var(--accent);
  }

  .nav-item.active::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 18px;
    height: 2px;
    background-color: var(--accent);
    border-radius: 1px;
    opacity: 0.7;
  }

  .nav-item svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .nav-item span {
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .navigation {
      position: static;
      border-top: none;
      border-bottom: 2px solid var(--gris-oscuro);
      margin-bottom: 2rem;
    }

    .nav-container {
      padding: 1rem 0;
      justify-content: flex-start;
      gap: 3rem;
    }

    .logo-container {
      display: block;
      margin-right: 3rem;
    }

    .nav-item {
      flex-direction: row;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      min-width: auto;
    }

    .nav-container > a {
      flex: 1;
      justify-content: center;
    }

    .nav-item span {
      font-size: 1rem;
      font-weight: 600;
    }

    .nav-item svg {
      width: 1.2rem;
      height: 1.2rem;
    }

    .nav-item.active {
      border: none;
      background: none;
      color: var(--accent);
    }

    .nav-item.active::after {
      bottom: -2px;
      width: 20px;
      height: 2px;
    }
  }

  /* Add bottom padding to body on mobile to account for fixed nav */
  @media (max-width: 767px) {
    body {
      padding-bottom: 120px;
    }
  }
</style>
